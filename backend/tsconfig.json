{
	"compilerOptions": {
		"target": "ES2020",
		"module": "nodenext",
		"lib": ["ES2020"],
		"rootDir": "src",
		"outDir": "dist",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["src", "src/tests"],
	"exclude": ["node_modules", "dist"]
}
